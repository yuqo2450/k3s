[Unit]
Description=Lightweight Kubernetes
Documentation=https://k3s.io
Wants=network-online.target
After=network-online.target

[Install]
WantedBy=multi-user.target

[Service]
Type=notify
EnvironmentFile=-/etc/default/%N
EnvironmentFile=-/etc/sysconfig/%N
#EnvironmentFile=-{{ env_path is defined | ternary(env_path,'') }}
KillMode=process
Delegate=yes
# Having non-zero Limit*s causes performance problems due to accounting overhead
# in the kernel. We recommend using cgroups to do container-local accounting.
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always
RestartSec=5s
ExecStartPre=-/sbin/modprobe br_netfilter
ExecStartPre=-/sbin/modprobe overlay
{% if "k3s-server" in group_names %}
ExecStart={{ bin }} server
{% elif "k3s-agent" in group_names %}
ExecStart={{ bin }} agent
{% else %}
ExecStart=echo "Please use k3s-server and k3s-agent as inventory group names!"
{% endif %}
